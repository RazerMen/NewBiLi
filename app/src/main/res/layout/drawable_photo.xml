            android:layout_height="40dp"
            android:src="@mipmap/live_home_search_room" />

        <TextView
            android:id="@+id/iv_sousuo"
            android:layout_below="@id/tv_sousuo"
            android:text="搜索"
            android:textSize="10sp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="226dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_fenlei"
            android:layout_marginLeft="305dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/live_home_all_category" />

        <TextView
            android:id="@+id/tv_fenlei"
            android:layout_below="@id/iv_fenlei"
            android:text="分类"
            android:textSize="10sp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="315dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3B3B3B">

        <ImageView
            android:id="@+id/tv_guanzhu"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/live_home_follow_anchor" />

        <TextView
            android:id="@+id/iv_guanzhu"
            android:layout_below="@id/tv_guanzhu"
            android:text="关注"
            android:textSize="10sp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/tv_zhongxin"
            android:layout_marginLeft="115dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/live_home_live_center" />

        <TextView
            android:id="@+id/iv_zhongxin"
            android:layout_below="@id/tv_zhongxin"
